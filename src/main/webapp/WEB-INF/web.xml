<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!--    https://memorynotfound.com/defining-passing-jsf-context-parameters/-->

    <display-name>Teste</display-name>

    <!-- JSF mapping -->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- Welcome page -->
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

    <!-- PARAMETROS DO JSF -->
    <!-- THEMA -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>nova-dark</param-value>
    </context-param>
    <!-- Change to "Production" when you are ready to deploy -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <!-- Converte valores date/datetime para o padrÃ£o do SO utilizado -->
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- Moves all inline scripts to end of body tag for better performance and smaller HTML output. -->
<!--    <context-param>-->
<!--        <param-name>primefaces.MOVE_SCRIPTS_TO_BOTTOM</param-name>-->
<!--        <param-value>true</param-value>-->
<!--    </context-param>-->
</web-app>
